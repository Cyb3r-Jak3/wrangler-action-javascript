{
  "name": "wrangler-action",
  "version": "0.0.1",
  "private": true,
  "description": "Github action for running Cloudflare wrangler",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest --coverage --detectOpenHandles",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cyb3r-Jak3/wrangler-action-javascript"
  },
  "keywords": [
    "actions"
  ],
  "author": "Cyb3r Jak3",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "^1.19.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.0.5",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.4"
  }
}
